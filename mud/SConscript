Import( 'env' )

VariantDir( 'build', '.', duplicate = 0 )

envmud = env.Clone(CXXFLAGS=['-std=c++11', '-pthread'])

libmud = envmud.SharedLibrary( target = 'build/libmud', 
	source = [Glob('build/mud.cpp')], 
	LIBPATH = '#out',
	LIBS = ['SC','pthread'])

envmud.Install( '#out', libmud )
envmud.Alias( 'install', '#out' )
