Import( 'env','sc' )

envSystem = env.Clone(CXXFLAGS='-g', LINKFLAGS = '-ldl -g')

envSystem.VariantDir( 'build', ['src'], duplicate = 0 )

system = envSystem.Program(
	target = 'build/system', 
	source = ['build/system.cpp'],
	LIBPATH = '#out', LIBS=['pthread','SC'])

envSystem.Install( '#out', system )
envSystem.Alias( 'install', '#out' )
